<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/laptopw6"
    android:orientation="vertical"
    tools:context=".personaldetails">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:fontFamily="@font/bigshot_one"
        android:padding="10sp"
        android:text="PERSONAL DETAILS"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:fontFamily="@font/atma_medium"
        android:hint="Enter your name "
        android:inputType="textPersonName"
        android:padding="10sp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="10sp"
        android:layout_marginBottom="20sp"
        android:fontFamily="@font/atma_medium"

        android:hint="Enter your age "
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_medium"

        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="10sp"
        android:layout_marginBottom="20sp"
        android:hint="Enter your mobile number"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_medium"

        android:ems="10"
        android:padding="10sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="20sp"
        android:hint="Enter your address"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:fontFamily="@font/atma_medium"

        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="20sp"
        android:hint="Enter your District"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_medium"

        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="10sp"
        android:layout_marginBottom="20sp"
        android:hint="Enter your PINCODE"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/submit"
        android:layout_width="177dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/trade_winds"
        android:textColor="#D24114"
        android:text="submit" />


</LinearLayout>