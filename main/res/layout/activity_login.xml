<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginpage6"
    tools:context=".login">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="50sp"
        android:fontFamily="@font/jacques_francois_shadow"
        android:padding="10sp"
        android:text="LOGIN PAGE"
        android:textAlignment="center"
        android:textColor="#05E28A"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:fontFamily="@font/atma_medium"
        android:background="@drawable/heading_radius"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your email"
        android:padding="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="80sp"
        android:layout_marginBottom="90sp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/atma_medium"
        android:background="@drawable/heading_radius"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Enter your password"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:fontFamily="@font/atma_medium"
        android:textSize="16sp"
        android:layout_marginRight="190sp"
        android:textColor="#FFEB3B"
        android:text="Remember me" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80sp"
        android:fontFamily="@font/trade_winds"
        android:padding="10sp"
        android:background="@drawable/input_design"

        android:text="login"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />



</LinearLayout>