<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/keyboardbg_4"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false"
    tools:context=".keyboard_redgearshadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp" />


        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Product Name : REDGEAR SHADOW BLADE MECHANICAL KEYBOARD"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modelname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Model : MK853"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/modeltype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Model Type : Mechanical Keyboard"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Brand : Readgear"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Price : \u20B9 2,199"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/warranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Warranty : 2 Year"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Features : Ergonomic, Mechanical"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/sellername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:text="Name of Seller : Imagine Marketing Pvt Ltd."
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/addtocard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:layout_marginRight="70sp"
            android:layout_marginLeft="70sp"
            android:text="Add to cart" />

        <Button
            android:id="@+id/buynow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginBottom="30sp"
            android:layout_marginRight="70sp"
            android:layout_marginLeft="70sp"
            android:text="buy now" />


    </LinearLayout>

</ScrollView>